// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  password String
  email    String   @unique
  height   Int?
  weight   Int?
  gender   Gender?
  activity Activity?
  Goal     Goal[]
  Water    Water[]
  Meal     Meal[]

  @@map("users")
} //TODO: fix create count

model Goal {
  id           Int  @id @default(autoincrement())
  user         User @relation(fields: [userId], references: [id])
  userId       Int
  caloriesGoal Int  @default(2000)
  waterGoal    Int  @default(2000)

  @@map("goals")
}

model Water {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  milliliters Int      @default(0)
  createdAt   DateTime @default(now())

  @@map("water")
}

model Meal {
  id        Int      @id @default(autoincrement())
  name      String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  calories  Int      @default(0)
  createdAt DateTime @default(now())

  @@map("meals")
}

enum Gender {
  male
  female
}

enum Activity {
  sedentary
  low
  moderate
  high
}
